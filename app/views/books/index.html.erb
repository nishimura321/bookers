<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><% @books.each do |book| %>
      <%= book.title %>
      <% end %></td>
      <td><% @books.each do |book| %>
      <%= book.body %>
      <% end %></td>
      <td><%= link_to 'Show', "book_path(book.id)" %></td>
      <td><%= link_to 'Edit', "book_path(book.id)" %></td>
      <td><%= link_to 'Destroy', "book_path(book.id)" %></td>
    </tr>
  </tbody>
</table>